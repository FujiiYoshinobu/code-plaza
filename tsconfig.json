{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "vscode"],
    "resolveJsonModule": true,
    "outDir": "out"
  },
  "include": ["src", "webview-ui"],
  "exclude": ["node_modules", "out"]
}
